@model WebApp.ViewModels.UserEditViewModel
@{
}

<div class="block-reg background-white">
	<form method="post" asp-controller="Edit" asp-action="Update">
        <div>
            <div class="mrgn">
                <input asp-for="@Model.UserId" class="form-control" placeholder="Id" value="@Model.UserId" />
                <span asp-validation-for="@Model.UserId" class="text-danger"></span>
            </div>
            <div class="mrgn">
                <input asp-for="@Model.Image" class="form-control" placeholder="Изображения" value="@Model.Image" />
                <span asp-validation-for="@Model.Image" class="text-danger"></span>
            </div>
            <div class="mrgn">
                <input asp-for="@Model.Email" class="form-control" placeholder="Email" value="@Model.Email"/>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="mrgn">
                <input asp-for="@Model.FirstName" class="form-control" placeholder="Имя" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="mrgn">
                <input asp-for="@Model.LastName" class="form-control" placeholder="Фамилия" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="mrgn">
                <input asp-for="@Model.BirthDate" class="form-control" placeholder="Дата Рождения" />
                <span asp-validation-for="@Model.BirthDate" class="text-danger"></span>
            </div>
            <div class="mrgn">
                <input asp-for="@Model.Status" class="form-control" placeholder="Статус" />
                <span asp-validation-for="@Model.Status" class="text-danger"></span>
            </div>
            <div class="mrgn">
                <input asp-for="@Model.About" class="form-control" placeholder="О себе" />
                <span asp-validation-for="@Model.About" class="text-danger"></span>
            </div>
        </div>
		<div class="center">
			<input class="enter_submit" type="submit" value="Сохранить" />
		</div>
	</form>
</div>
