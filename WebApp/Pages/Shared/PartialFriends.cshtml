@using WebApp.AccountManager
@model List<User> 
@{
}

<span class="block-reg">
    @if(Model != null)
    @if (Model.Count != 0)
    {

        @foreach (var user in @Model)
        {
                <img src="@user.Image" class="friend-image" />
                <label>@user.GetFullName()</label>

                <form asp-controller="AccountManager" asp-action="Chat" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-primary min-width-but">
                        Чат
                    </button>
                </form>

                <form asp-controller="AccountManager" asp-action="DeleteFriend" asp-route-id="@user.Id">
                    <button type="submit" class="btn btn-sm btn-primary min-width-but">
                        Удалить из друзей
                    </button>
                </form>
        }
    }
    else
    {
        <div>
            <label> Поиск не дал результатов.</label>
        </div>
    }


</span>